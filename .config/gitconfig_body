### for $HOME/.gitconfig
# [user]
#     name = {name}
#     email = {email}
# [include]
#     path = ~/.config/gitconfig_body
###

[core]
	excludesfile = ~/.config/gitignore_global
	editor = "emacs"
[pager]
	log = diff-highlight | less -x4
	show = diff-highlight | less -x4
	diff = diff-highlight | less -x4
[diff]
	compactionHeuristic = true
[alias]
    d = diff
    s = status
    co = checkout
    difw = diff --word-diff
    difc = diff --cached
    difwc = diff --word-diff --cached
    difcw = diff --word-diff --cached
[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/
[ghq]
    root = /opt/var/ghq
