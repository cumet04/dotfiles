### for $HOME/.gitconfig
# [user]
#     name = {name}
#     email = {email}
# [include]
#     path = ~/.config/gitconfig_body
###

[core]
	excludesfile = ~/.config/gitignore_global
	editor = "nano"
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[diff]
	compactionHeuristic = true
[alias]
    d = diff
    s = status
    difw = diff --word-diff
    difc = diff --cached
    difwc = diff --word-diff --cached
    difcw = diff --word-diff --cached
