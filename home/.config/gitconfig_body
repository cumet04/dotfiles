[core]
	excludesfile = ~/.config/gitignore_global
	editor = "nano"
[branch]
	autosetupmerge = false
[pager]
	#log = diff-highlight | less -x4
	#show = diff-highlight | less -x4
	#diff = diff-highlight | less -x4
[diff]
	compactionHeuristic = true
[alias]
    d = diff
    s = status
    co = checkout
    pfetch = fetch origin --prune
    difw = diff --word-diff
    difc = diff --cached
    difwc = diff --word-diff --cached
    difcw = diff --word-diff --cached
[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/
[ghq]
    root = /opt/var/ghq
    root = /opt/var/go/src
[ghq "http://svn.inet.oro.co.jp"]
vcs = svn
