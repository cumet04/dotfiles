[core]
	excludesfile = ~/.config/gitignore_global
	editor = "nano"
[pager]
	log = diff-highlight | less -x4
	show = diff-highlight | less -x4
	diff = diff-highlight | less -x4
[diff]
	compactionHeuristic = true
[alias]
    d = diff
    s = status
    co = checkout
    pfetch = fetch origin --prune
    difw = diff --word-diff
    difc = diff --cached
    difwc = diff --word-diff --cached
    difcw = diff --word-diff --cached
[url "git@bitbucket.org:"]
	insteadOf = https://bitbucket.org/
[ghq]
    root = /opt/var/ghq/src
[tig]
  vertical-split = yes
  diff-highlight = true
  history-size = 0
[tig "bind"]
   generic = G none
   generic = g move-first-line
   generic = G move-last-line
   status = C <git commit
